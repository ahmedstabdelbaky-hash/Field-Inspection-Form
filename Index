    <button id="savePDFBtn">Save PDF</button>
    <button id="saveUploadBtn">Save PDF & Upload</button>
    <button id="clearBtn" style="background-color:#999;">Clear</button>
  </div>

  <script>
    // التاريخ التلقائي
    document.getElementById("dateField").valueAsDate = new Date();

    // الزرار بتاع Clear
    document.getElementById('clearBtn').addEventListener('click', () => {
      document.querySelectorAll('input, textarea, select').forEach(el => el.value = '');
      document.getElementById("dateField").valueAsDate = new Date();
    });

    // حفظ PDF محلي
    document.getElementById('savePDFBtn').addEventListener('click', async () => {
      const { jsPDF } = window.jspdf;
      const pdf = new jsPDF({ orientation: 'p', unit: 'pt', format: 'a4' });

      await html2canvas(document.body, { scale: 2 }).then(canvas => {
        const imgData = canvas.toDataURL('image/png');
        const imgWidth = 595.28;
        const pageHeight = 841.89;
        const imgHeight = canvas.height * imgWidth / canvas.width;
        pdf.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);
      });

      pdf.save(`Field_Inspection_${new Date().toISOString().slice(0,10)}.pdf`);
    });

    // حفظ PDF ورفعه على Google Drive
    document.getElementById('saveUploadBtn').addEventListener('click', async () => {
      const { jsPDF } = window.jspdf;
      const pdf = new jsPDF({ orientation: 'p', unit: 'pt', format: 'a4' });

      await html2canvas(document.body, { scale: 2 }).then(canvas => {
        const imgData = canvas.toDataURL('image/png');
        const imgWidth = 595.28;
        const pageHeight = 841.89;
        const imgHeight = canvas.height * imgWidth / canvas.width;
        pdf.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);
      });

      const pdfData = pdf.output('datauristring').split(',')[1];
      const filename = `Field_Inspection_${new Date().toISOString().slice(0,10)}.pdf`;

      const formData = new FormData();
      formData.append('fileData', pdfData);
      formData.append('filename', filename);

      const uploadUrl = "https://script.google.com/macros/s/AKfycbxHQZQGXdtwC0uMo_UgT6CL7LwHAOzwmBJdf3pLieglIIP559Jru5ktjx35Vfy2WZAElA/exec";

      try {
        const response = await fetch(uploadUrl, { method: 'POST', body: formData });
        const text = await response.text();
        alert('✅ Upload successful!\n' + text);
      } catch (error) {
        alert('❌ Upload failed: ' + error.message);
      }
    });
  </script>
